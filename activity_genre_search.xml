<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stefan.newapp3.GenreSearch">

    <Button
        android:id="@+id/btnThriller"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Thriller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAction"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Action"
        app:layout_constraintStart_toEndOf="@+id/btnThriller"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnComedy"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Comedy"
        app:layout_constraintStart_toEndOf="@+id/btnAction"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDrama"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Drama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThriller" />

    <Button
        android:id="@+id/btnMystery"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Mystery"
        app:layout_constraintStart_toEndOf="@+id/btnDrama"
        app:layout_constraintTop_toBottomOf="@+id/btnAction" />

    <Button
        android:id="@+id/btnNoGenre"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="All Shows"
        app:layout_constraintStart_toEndOf="@+id/btnMystery"
        app:layout_constraintTop_toBottomOf="@+id/btnComedy" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/genre_recycler"
        android:layout_width="371dp"
        android:layout_height="371dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
