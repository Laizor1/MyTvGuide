<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_card_view"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/show_image"
                app:srcCompat="@drawable/tv"
                android:paddingRight="6dp"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtShow"
                android:textSize="22dp"
                android:layout_toRightOf="@+id/show_image"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txtGenre"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/show_image"
                android:layout_below="@+id/txtShow"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtRating"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/show_image"
                android:layout_below="@+id/txtGenre"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtYear"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/show_image"
                android:layout_below="@+id/txtRating"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/test_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add"
                android:layout_toRightOf="@+id/show_image"
                android:layout_below="@id/txtYear"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>